{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_project",
      "type": "cppbuild",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++20",
        "main.cpp",
        "test_util.cpp",
        "triangle.cpp",
        "-o",
        "${workspaceFolder}/build/triangle"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
    }
  ]
}